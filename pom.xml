                        </webResource>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>${maven-javadoc-plugin.version}</version>
                <configuration>
                    <!-- Default configuration for all reports -->
                    <failOnError>false</failOnError>
                    <failOnWarnings>false</failOnWarnings>
                    <quiet>true</quiet>
                    <doclint>none</doclint>
                    <show>public</show>
                    <excludes>src/test/**/*</excludes>
                </configuration>
                <executions>
                    <execution>
                        <id>attach</id>
                        <goals>
                            <goal>aggregate-jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>aggregate-client-javadocs</id>
                        <inherited>false</inherited>
                        <phase>install</phase>
                        <goals>
                            <goal>aggregate</goal>
                        </goals>
                        <configuration>
                            <!-- Specific configuration for the Java client aggregate report -->
                            <detectLinks>true</detectLinks>
                            <doctitle>Naturalis Biodiversity API (NBA)
                                V${project.version} -
                                Java client</doctitle>
                            <sourcepath> nl.naturalis.nba.api/src/main/java:
                                nl.naturalis.nba.client/src/main/java:
                                nl.naturalis.nba.common/src/main/java:
                                nl.naturalis.nba.util/src/main/java
                            </sourcepath>
                            <destDir>client</destDir>
                        </configuration>
                    </execution>
                    <execution>
                        <id>aggregate-all-javadocs</id>
                        <inherited>false</inherited>
                        <phase>install</phase>
                        <goals>
                            <goal>aggregate</goal>
                        </goals>
                        <configuration>
                            <!-- Specific configuration for the Rest API aggregate report -->
                            <detectLinks>true</detectLinks>
                            <doctitle>Naturalis Biodiversity API (NBA)
                                V${project.version} -
                                Developer documentation</doctitle>
                            <sourcepath> nl.naturalis.nba.api/src/main/java:
                                nl.naturalis.nba.client/src/main/java:
                                nl.naturalis.nba.common/src/main/java:
                                nl.naturalis.nba.util/src/main/java:
                                nl.naturalis.nba.dao/src/main/java:
                                nl.naturalis.nba.etl/src/main/java:
                                nl.naturalis.nba.rest/src/main/java
                            </sourcepath>
                            <destDir>all</destDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>delete-nba-gh-pages</id>
                        <phase>deploy</phase>
                        <inherited>false</inherited>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>rm</executable>
                            <arguments>
                                <argument>-rf</argument>
                                <argument>${project.basedir}/../nba-gh-pages</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>clone-nba-gh-pages-repo</id>
                        <phase>deploy</phase>
                        <inherited>false</inherited>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>git</executable>
                            <arguments>
                                <argument>clone</argument>
                                <argument>--single-branch</argument>
                                <argument>-b</argument>
                                <argument>gh-pages</argument>
                                <argument>https://github.com/naturalis/naturalis_data_api.git</argument>
                                <argument>${project.basedir}/../nba-gh-pages</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>delete-nba-gh-pages-subfolder</id>
                        <phase>deploy</phase>
                        <inherited>false</inherited>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>rm</executable>
                            <arguments>
                                <argument>-rf</argument>
                                <argument>${project.basedir}/../nba-gh-pages/javadoc/v2/client</argument>
                                <argument>${project.basedir}/../nba-gh-pages/javadoc/v2/all</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-client-javadocs</id>
                        <phase>deploy</phase>
                        <inherited>false</inherited>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>cp</executable>
                            <arguments>
                                <argument>-r</argument>
                                <argument>${project.build.directory}/site/apidocs/client</argument>
                                <argument>${main.basedir}/../nba-gh-pages/javadoc/v2/client</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-all-javadocs</id>
                        <phase>deploy</phase>
                        <inherited>false</inherited>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>cp</executable>
                            <arguments>
                                <argument>-r</argument>
                                <argument>${project.build.directory}/site/apidocs/all</argument>
                                <argument>${main.basedir}/../nba-gh-pages/javadoc/v2/all</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>only-within-eclipse</id>
            <activation>
                <property>
                    <name>m2e.version</name>
                </property>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.eclipse.m2e</groupId>
                            <artifactId>lifecycle-mapping</artifactId>
                            <version>1.0.0</version>
                            <configuration>
                                <lifecycleMappingMetadata>
                                    <pluginExecutions>
                                        <pluginExecution>
                                            <pluginExecutionFilter>
                                                <groupId>org.codehaus.mojo</groupId>
                                                <artifactId>exec-maven-plugin</artifactId>
                                                <versionRange>[1.0,)</versionRange>
                                                <goals>
                                                    <goal>exec</goal>
                                                </goals>
                                            </pluginExecutionFilter>
                                            <action>
                                                <ignore />
                                            </action>
                                        </pluginExecution>
                                    </pluginExecutions>
                                </lifecycleMappingMetadata>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
    </profiles>

</project>
